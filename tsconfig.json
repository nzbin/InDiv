{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": false,
    "lib": ["dom", "es2015.promise", "es5", "es2017"],
    "declaration": false,
    "paths": {
      "@indiv/*": ["./packages/*"]
    },
  },
  "include": [
    "src/**/*",
    "demo/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
